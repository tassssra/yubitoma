<% if user_signed_in? %>
  <% if event.joined_by?(current_user) %>
    <%= link_to "キャンセル", event_joins_path(event.id), method: :delete, remote: true, class: "btn btn-warning" %>
  <% else %>
    <%= link_to "参加", event_joins_path(event.id), method: :post, remote: true, class: "btn btn-success" %>
  <% end %>
<% else %>
  <p><span>参加人数: </span><%= event.joins.count %></p>
<% end %>
