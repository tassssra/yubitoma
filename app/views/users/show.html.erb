<h1>ユーザー詳細ページ</h1>
<h3><%= @user.name %></h3>
<h2>作成したイベント</h2>
<% @user.events.each do |event| %>
  <%= link_to event, event_path %>
  <hr>
<% end %>
<h3>参加しているイベント</h3>
<% @user.joined_events.each do |event| %>
  <%= link_to @user.name, user_path %>
  <%= link_to event, event_path %>
<% end %>
<%= link_to "ユーザー一覧へ", users_path %>
<%= link_to "ホームへ戻る", events_path %>
