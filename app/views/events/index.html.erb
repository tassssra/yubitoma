<% @events.each do |event| %>
  <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
    <%= show_event_image event %>
    <h5 class="mt-2"><%= link_to event.title, event_path(event) %></h5>
    <div><%= event.date %></div>
    <p><%= truncate(event.description, length: 20) %></p>
  </div>
<% end %>

<div class="col-12">
  <%= paginate @events %>
</div>
