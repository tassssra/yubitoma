<div class="col-md-10 offset-md-1 mt-5">
  <h2><%= @event.title %></h2>
  <ul>
    <li><%= t ".date" %>: <%= @event.date %></li>
    <li><%= t ".address" %>: <%= @event.address %></li>
  </ul>
  <h5><%= t ".description" %></h5>
  <%= simple_format @event.description %>
</div>
